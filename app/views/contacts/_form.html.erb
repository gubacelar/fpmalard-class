      </div>
    </div>

    <div class="form-group">

      <%= f.label 'Did you find what you needed?', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="radio">
          <label>
            <%= f.radio_button :feedback, 'Yes, all of it' %>
            Yes, all of it
          </label>
        </div>
        <div class="radio">
          <label>
            <%= f.radio_button :feedback, 'Yes, some of it' %>
            Yes, some of it
          </label>
        </div>
        <div class="radio">
          <label>
            <%= f.radio_button :feedback, 'No, none of it' %>
            No, none of it
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :message, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :message, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'submit', :class => 'btn btn-success' %>
      </div>
    </div>

<% end %>
